<div class="card product bg-light">
	<div class="card-header fs-4"><%= product.name %> - $<%= (product.price * quantity) %></div>
	<img class="m-2 mx-4" src="<%= product.image || '' %>">
	<div class="card-body">
		<div class="mx-1 mt-0 mb-2">
			<b>Price:</b> $<%= product.price %>
		</div>
		<div class="mx-1 mt-0 mb-2">
			<b>Remaining Stock:</b> <%= product.stock - quantity %>
		</div>
		<div class="mx-1 mt-0 mb-2">
			<b>Description:</b> <%- product.description.replace(/\n/g, '<br/>') %>
		</div>
		<div>
			<div class="d-flex align-items-center gap-1">
				<b>Quantity:</b>
				<form action="/cart/sub/<%= product._id %>" method="POST">
					<input type="hidden" name="_csrf" value="<%= csrfToken %>" />
					<button class="btn btn-primary">-</button>
				</form>
				<input class="form-control" style="width: 50px;" type="text" readonly value="<%= quantity %>" />
				<form action="/cart/add/<%= product._id %>" method="POST">
					<input type="hidden" name="_csrf" value="<%= csrfToken %>" />
					<button class="btn btn-primary">+</button>
				</form>
				<form action="/cart/remove/<%= product._id %>" method="POST">
					<input type="hidden" name="_csrf" value="<%= csrfToken %>" />
					<button class="btn btn-danger">Remove Item</button>
				</form>
			</div>
		</div>
	</div>
</div>
