<div class="card bg-light p-2">
	<!-- <div class="card-header"><%= name %></div> -->
	<img class="m-2" src="<%= image || '' %>">
	<div class="card-body">
		<h5 class="card-title"><%= name %> - $<%= price %></h5>
		<p class="card-text"><%= description %></p>
		<div class="float-end">
			<a href="/products/<%= _id %>" class="btn btn-success">More Info</a>
			<a href="/cart/add/<%= _id %>" class="btn btn-primary">Add to Cart</a>
		</div>
	</div>
</div>
